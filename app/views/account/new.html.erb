<%= render "base"%>
<h1 class="account_logo">
	<%= raw SiteConfig.welcome %>
  这里是<span class="red">农友圈</span></span>
</h1>
<div class="account_center">
<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  
    <%= f.hidden_field :login, :hint => t("users.suggest_using_email_id"), :id => "login" %>
    <%= f.input :email, :input_html => {  :placeholder => "24750197@qq.com", :id => "email" } %>
    <%= f.input :name %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
</div>


<%= render "shared/error_messages", :target => resource %> 
    
<%= notice_message %>
<div class="account_foot">
  <%= f.submit "提交注册信息", :class => "btn btn-large btn-primary", :disable_with => t("common.submitting") %>
  <%= t("users.already_have_account")%>
  <%= render :partial => "devise/shared/links" %>
</div> 
<% end %>